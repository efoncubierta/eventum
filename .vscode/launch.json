{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
          "-r",
          "ts-node/register",
          "--colors",
          "${workspaceFolder}/test/**/*.spec.ts",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
  },
  ]
}